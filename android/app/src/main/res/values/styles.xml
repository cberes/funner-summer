<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Section header -->
    <style name="textAppearanceSectionHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#e4a933</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Active list item style -->
    <style name="textAppearanceActiveListItemSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Inactive list item style -->
    <style name="textAppearanceInactiveListItemSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#AAA</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
